<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Toolbar">
        <attr name="toolbar_title" format="string"/><!-- 标题 -->
        <attr name="toolbar_show_back_button" format="boolean"/><!-- 是否显示返回按钮-默认是true -->
        <attr name="toolbar_button_right_text" format="string"/><!-- 右边的按钮文字，没有则不显示按钮 -->
        <attr name="toolbar_background_color" format="color"/><!-- 默认： #48CFAD -->
        <attr name="toolbar_show_status_bar_view" format="boolean"/><!-- 默认为 true -->
        <attr name="toolbar_title_text_color" format="color"/><!-- 标题文字颜色。默认 #FFFFFF -->
        <attr name="toolbar_btn_back_black" format="boolean"/><!-- 返回按钮是否设为黑色。默认是白色 -->
    </declare-styleable>

    <declare-styleable name="SettingItem">
        <attr name="setting_item_name" format="string"/><!-- 名称 -->
        <attr name="setting_item_right_text" format="string"/><!-- 右边文字 -->
        <attr name="setting_item_right_hint" format="string"/>
        <attr name="setting_item_arrow_show" format="boolean"/><!-- 是否显示箭头（默认为true） -->
    </declare-styleable>
</resources>
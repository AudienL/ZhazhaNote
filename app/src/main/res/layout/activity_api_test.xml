<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/getCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码"/>

        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"/>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"/>

        <Button
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码"/>

        <Button
            android:id="@+id/changePasswordByCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="修改密码_根据验证码"/>

        <Button
            android:id="@+id/updateVersionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="记录版本信息"/>

        <Button
            android:id="@+id/getMyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"/>
    </LinearLayout>
</ScrollView>
